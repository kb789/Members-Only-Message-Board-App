<head>
  <%- include('../partials/head'); %>
</head>
<body class="container">
  <header><%- include('../partials/header_j'); %></header>

  <h1
    class="text-center text-3xl mb-10 font-extrabold tracking-tight text-gray-900"
  >
    The Club
  </h1>

  <% if (user && user.status === false) {%> <% if (errors.length>0 ) { %>

  <h2 class="mx-auto text-center text-2xl">Are you a member?</h2>
  <img class="mx-auto mb-10" src="door.png" />

  <form action="/join" method="POST" class="w-1/2 mx-auto mt-10 text-center">
    <p class="text-red-500">Error(s):</p>
    <ul class="mb-5 text-red-500">
      <li><%= errors[0] %></li>
    </ul>
    <label for="secret" class="block mb-3"
      >Enter the secret password to discover who wrote the messages</label
    >
    <input
      name="secret"
      placeholder="secret"
      type="password"
      class="w-full p-2 mb-3 border border-gray-400 border-solid"
    />

    <button class="p-3 pl-5 pr-5 mt-5 text-white bg-sky-400 rounded-lg">
      Submit
    </button>
  </form>
  <% } else { %>
  <h2 class="mx-auto text-center text-2xl">Are you a member?</h2>
  <img class="mx-auto mb-10" src="door.png" />

  <form action="/join" method="POST" class="w-1/2 mx-auto mt-10 text-center">
    <label for="secret" class="block mb-3"
      >Enter the secret password to discover who wrote the messages</label
    >
    <input
      name="secret"
      placeholder="secret"
      type="password"
      class="w-full p-2 mb-3 border border-gray-400 border-solid"
    />

    <button class="p-3 pl-5 pr-5 mt-5 text-white bg-sky-400 rounded-lg">
      Submit
    </button>
    <p class="mb-6 mt-14 text-gray-700">
      <span class="secret"> Don't know the secret password? </span>
      <a href="/quiz"
        ><span class="text-sky-400 font-semibold underline"
          >Answer a trivia question correctly</span
        ></a
      >
      <span class="secret"> and we'll give it to you.</span>
    </p>
  </form>

  <% } %> <% } else if (user && user.status === true) {%>
  <h1
    class="text-center text-3xl mb-10 font-extrabold tracking-tight text-gray-900"
  >
    You're in the Club!
  </h1>
  <img class="mx-auto mb-10" src="thumbsup.png" />
  <% } else {%>
  <h1
    class="text-center text-3xl mb-10 font-extrabold tracking-tight text-gray-900"
  >
    You must be signed in to join the Club!
  </h1>
  <img class="mx-auto mb-10" src="key.png" />
  <% } %>
</body>
